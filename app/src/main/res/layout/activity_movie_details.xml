<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".movie.details.MovieDetailsActivity">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:id="@+id/backdrop_imageView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <TextView
      tools:text="@string/place_holder_details"
      android:textColor="@android:color/black"
      android:textSize="@dimen/text_size_xmedium"
      android:padding="@dimen/spacing_micro"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/overview_textView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_margin="@dimen/spacing_medium"
      app:layout_constraintTop_toBottomOf="@+id/backdrop_imageView"/>

  <TextView
      android:id="@+id/duration_textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/text_size_xmedium"
      tools:text="@string/place_holder_runtime"
      android:padding="@dimen/spacing_micro"
      android:layout_marginTop="@dimen/spacing_medium"
      android:textColor="@android:color/black"
      android:layout_marginLeft="@dimen/spacing_medium"
      android:layout_marginStart="@dimen/spacing_medium"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/overview_textView"/>

  <TextView
      tools:text="@string/place_holder_release_date"
      android:layout_width="wrap_content"
      android:layout_marginTop="@dimen/spacing_medium"
      android:textSize="@dimen/text_size_xmedium"
      android:padding="@dimen/spacing_micro"
      android:layout_height="wrap_content"
      android:id="@+id/releaseDate_textView"
      android:textColor="@android:color/black"
      android:layout_marginLeft="@dimen/spacing_medium"
      android:layout_marginStart="@dimen/spacing_medium"
      app:layout_constraintTop_toBottomOf="@+id/overview_textView"
      app:layout_constraintStart_toEndOf="@+id/duration_textView"/>

  <TextView
      tools:text="@string/place_holder_rating"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/rating_textView"
      app:layout_constraintEnd_toEndOf="parent"
      android:background="@color/colorPrimary"
      android:textColor="@android:color/white"
      android:paddingStart="@dimen/spacing_small"
      android:paddingEnd="@dimen/spacing_small"
      android:layout_marginLeft="@dimen/spacing_medium"
      android:layout_marginStart="@dimen/spacing_medium"
      android:layout_marginEnd="@dimen/spacing_medium"
      android:layout_marginRight="@dimen/spacing_medium"
      android:textSize="@dimen/text_size_xmedium"
      android:padding="@dimen/spacing_micro"
      app:layout_constraintStart_toEndOf="@+id/releaseDate_textView"
      app:layout_constraintHorizontal_bias="1.0"
      android:layout_marginTop="@dimen/spacing_medium"
      app:layout_constraintTop_toBottomOf="@+id/overview_textView"/>

  <TextView
      tools:text="@string/place_holder_genres"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@android:color/black"
      android:id="@+id/genre_textView"
      android:layout_marginLeft="@dimen/spacing_medium"
      android:layout_marginStart="@dimen/spacing_medium"
      android:padding="@dimen/spacing_micro"
      android:textSize="@dimen/text_size_xmedium"
      android:layout_marginTop="@dimen/spacing_medium"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/duration_textView"/>

  <TextView
      tools:text="@string/place_holder_language"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/language_textView"
      android:background="@color/colorAccent"
      android:textColor="@android:color/white"
      android:paddingStart="@dimen/spacing_small"
      android:paddingEnd="@dimen/spacing_small"
      android:textAllCaps="true"
      android:textSize="@dimen/text_size_xmedium"
      android:padding="@dimen/spacing_micro"
      android:layout_marginTop="@dimen/spacing_medium"
      app:layout_constraintTop_toBottomOf="@+id/rating_textView"
      android:layout_marginEnd="@dimen/spacing_medium"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginRight="@dimen/spacing_medium"/>

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/genre_textView"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_margin="@dimen/spacing_medium"
      app:layout_constraintEnd_toEndOf="parent"
      android:id="@+id/cardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/spacing_medium"
        android:layout_height="wrap_content">

      <TextView
          android:text="@string/budget"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          android:textSize="@dimen/text_size_xmedium"
          android:id="@+id/textView_budget"
          android:textColor="@android:color/black"
          app:layout_constraintTop_toTopOf="parent"/>

      <TextView
          tools:text="@string/place_holder_budget"
          android:textColor="@android:color/black"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/budget_textView"
          android:textSize="@dimen/text_size_xmedium"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toEndOf="@+id/textView_revenue"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"/>

      <TextView
          android:text="@string/revenue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/textView_revenue"
          android:textStyle="bold"
          android:layout_marginTop="@dimen/spacing_small"
          android:layout_marginEnd="@dimen/spacing_small"
          android:layout_marginRight="@dimen/spacing_small"
          android:layout_marginBottom="@dimen/spacing_medium"
          android:textSize="@dimen/text_size_xmedium"
          app:layout_constraintTop_toBottomOf="@+id/textView_budget"
          android:textColor="@android:color/black"
          app:layout_constraintStart_toStartOf="parent"/>

      <TextView
          tools:text="@string/place_holder_revenue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@android:color/black"
          android:id="@+id/revenue_textView"
          android:layout_marginTop="@dimen/spacing_small"
          android:layout_marginLeft="@dimen/spacing_small"
          android:layout_marginStart="@dimen/spacing_small"
          android:textSize="@dimen/text_size_xmedium"
          android:layout_marginEnd="@dimen/spacing_medium"
          android:layout_marginRight="@dimen/spacing_medium"
          android:layout_marginBottom="@dimen/spacing_medium"
          app:layout_constraintTop_toBottomOf="@+id/budget_textView"
          app:layout_constraintStart_toEndOf="@+id/textView_revenue"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>